[color]
	ui = auto
[pretty]
	tree = format:%C(yellow)%h %Cgreen%an %Cblue%ar%Cred%d %Creset %s
[alias]
	ad = add -A
	ap = add -p
	br = branch
	ca = commit -a
	cam = commit -am
	ci = commit
	cia = commit -a
	ciam = commit -am
	cim = commit -m
	cm = commit -m
	cma = commit -am
	co = checkout
	cp = checkout -p
	dc = diff --cached -M -C -b
	di = diff -M -C -b
	dic = diff --cached -M -C -b
	dt = difftool
	fix = commit --fixup HEAD
	fp = fetch --all -t -p
	h = help
	lg = log --oneline --graph --decorate -20
	lga = log --oneline --graph --decorate -20 --all
	mt = mergetool
	pick = cherry-pick --ff
	ra = rebase --abort
	rc = rebase --continue
	re = reset
	rh = reset --hard
	ri = rebase -i --autosquash
	rp = reset -p
	st = status -sb
	up = pull --ff-only --all -t -p
[push]
	default = upstream
[core]
	pager = less -FRSX
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
